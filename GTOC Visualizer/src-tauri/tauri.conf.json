{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GTOC Visualizer",
  "version": "1.2.1",
  "identifier": "com.luism.gtoc-visualizer",

  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../out"
  },

  "app": {
    "windows": [
      {
        "title": "GTOC Visualizer",
        "width": 1600,
        "height": 1000,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "Â© 2025 Luis M. Postigo",
    "category": "Education",
    "shortDescription": "Interactive 3D mission design visualizer for GTOC-13.",
    "longDescription": "A high-fidelity mission design tool for GTOC-13 with interactive orbit propagation, solution management, and visualization built in React, Three.js, and Tauri.",
    "windows": {
      "wix": {
        "language": "en-US"
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15"
    }
  }
}
